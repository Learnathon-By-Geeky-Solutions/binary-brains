@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Name"></label>
			<input asp-for="Name" type="text" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DsiplayOrder"></label>
			<input asp-for="DsiplayOrder" type="text" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="CreatedBy"></label>
			<input asp-for="CreatedBy" type="text" class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Create</button>

			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline border form-control">
					Back To List
				</a>
			</div>
		</div>

	</div>
</form>