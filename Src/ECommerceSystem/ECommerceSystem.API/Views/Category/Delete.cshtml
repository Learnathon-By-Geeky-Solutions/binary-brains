@model Category

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"disabled />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DsiplayOrder"></label>
			<input asp-for="DsiplayOrder" class="form-control" disabled/>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="CreatedBy"></label>
			<input asp-for="CreatedBy" class="form-control" disabled/>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Delete</button>

			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline border form-control">
					Back To List
				</a>
			</div>
		</div>

	</div>
</form>
