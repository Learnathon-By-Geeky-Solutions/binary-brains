@model IEnumerable<Product>

<div class="container-fluid p-0 d-flex">
    <div class="row g-0 mx-0 w-100">
        @foreach (var product in Model.Select((p, index) => new { Product = p, Index = index }))
        {
            if (product.Index % 5 == 0 && product.Index > 0)
            {
                @Html.Raw("</div><div class='row g-0 mx-0 w-100'>")
            }
            <div class="col-lg-1/5 col-md-4 col-sm-6 col-12 d-flex justify-content-center p-2">
                <div class="card card-primary card-outline shadow rounded" style="width: 100%; max-width: 220px;">
                    <img src="@(product.Product.ImageUrl ?? "https://placehold.co/600x400")"
                         class="card-img-top rounded"
                         alt="@product.Product.Title"
                         style="height: 120px; object-fit: cover; margin-bottom: 0;" />

                    <div class="card-body d-flex flex-column align-items-center p-1 pb-2">
                        <h6 class="card-title text-dark mb-1 text-center"
                            style="font-size: 0.9rem; text-transform: capitalize; margin-top: 0; line-height: 1.1rem; height: 2.2rem; overflow: hidden;">
                            @product.Product.Title
                        </h6>

                        <p class="text-muted mb-0" style="font-size: 0.75rem;">
                            by <b>@product.Product.Category?.Name</b>
                        </p>

                        <p class="text-dark font-weight-bold mb-0" style="font-size: 0.85rem;">
                            @product.Product.Price.ToString("C", new System.Globalization.CultureInfo("bn-BD"))
                        </p>

                        <p class="text-info font-italic mb-1 text-center" style="font-size: 0.75rem; height: 1.5rem; overflow: hidden;">
                            @{
                                var des = product.Product.Description;
                                if (des.Length > 22)
                                {
                                    des = product.Product.Description.Substring(0, 21) + "...";
                                }
                            }
                            @des
                        </p>

                        <a asp-action="Details" asp-route-productId="@product.Product.Id"
                           class="btn btn-sm btn-primary mt-auto"
                           style="font-size: 0.8rem; max-width: 100px; padding: 0.4rem 0.8rem;">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .col-lg-1\/5 {
        flex: 0 0 auto;
        width: 20%;
    }
</style>